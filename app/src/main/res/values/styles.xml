<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NavigationTheme" parent="AppTheme">
        <item name="listPreferredItemHeightSmall">42dp</item><!-- menu item height- vary as u need -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedImageRect">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>


    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

    <style name="OneSideRoundedImageRect">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">20%</item>
    </style>


    <style name="YourCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">#FFADAD</item>
    </style>
    <style name="RoundedImageRectRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">0%</item>
        <item name="cornerSizeTopLeft">20%</item>
        <item name="cornerSizeTopRight">0%</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>



    <style name="ProductImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

    <style name="RoundedProfileDP">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>