<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:layout_margin="@dimen/Margin5dp"
    tools:context=".MainActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/frameId"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="0sp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription=""
                    android:scaleType="fitXY"
                    android:src="@drawable/f"
                    app:shapeAppearanceOverlay="@style/OneSideRoundedImageRect"
                    android:adjustViewBounds="true"/>

            </FrameLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="5"


                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvTittle"
                    android:layout_width="match_parent"

                    android:text="Coupon Code"
                    android:layout_weight="1"
                     android:layout_gravity="center|start"
                    android:gravity="center|start"

                    android:layout_marginEnd="@dimen/Margin5dp"


                    android:layout_marginStart="@dimen/Margin10dp"
                    app:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/Margin15dp"
                    android:padding="@dimen/Margin5dp"
                    android:textColor="@color/black"
                    android:alpha=".9"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

                <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/switch1"
                    android:layout_weight="2.2"
android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:checked="false" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRs"
                    android:layout_width="match_parent"

                    android:text=""
                    android:layout_weight="1.8"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:layout_marginEnd="@dimen/Margin5dp"


                    android:layout_marginStart="@dimen/Margin10dp"
                    app:fontFamily="@font/montserrat"
                    android:textSize="12sp"
                    android:padding="@dimen/Margin5dp"
                    android:textColor="@color/black"
                    android:alpha=".9"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.google.android.material.textview.MaterialTextView
               android:id="@+id/tvDes"
                android:layout_width="match_parent"

                android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document or a typeface without relying on meaningful content."
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:layout_marginEnd="@dimen/Margin10dp"

                android:layout_marginStart="@dimen/Margin10dp"
                app:fontFamily="@font/montserrat"
                android:textSize="@dimen/Margin15dp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />




    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"

            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvStartDate"
                android:layout_width="match_parent"

                android:text=""
                android:drawableStart="@drawable/ic_watch_later_black_24dp"
                android:layout_weight="1.8"
                android:layout_gravity="center|start"
                android:gravity="center|start"
android:drawablePadding="@dimen/Margin10dp"

                 app:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".9"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_height="wrap_content">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEndDate"
                android:layout_width="match_parent"
                android:layout_gravity="end|center"
                android:gravity="end|center"
                android:drawablePadding="@dimen/Margin10dp"
                android:text=""
                android:drawableEnd="@drawable/ic_watch_later_black_24dp"




                 app:fontFamily="@font/montserrat"
                android:textSize="12sp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".9"
                 android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="end|bottom"
        android:gravity="bottom|end"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_weight="1"
            android:padding="@dimen/Margin15dp"
            android:fontFamily="@font/montserrat_b"
             android:textAllCaps="false"
             android:textColor="@color/white"

            android:textSize="@dimen/text_size_edit"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_margin="@dimen/Margin5dp"
            android:padding="@dimen/Margin15dp"
            android:layout_weight="1"
app:backgroundTint="@color/black"
            android:fontFamily="@font/montserrat_b"
             android:textAllCaps="false"
             android:textColor="@color/white"

            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>