<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".ui.Order.MyOrderDetails">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:contentInsetStart="0dp"
                app:titleTextColor="@color/white"

                app:contentInsetStartWithNavigation="0dp"
                app:elevation="0dp"
                app:popupTheme="@style/Platform.MaterialComponents" >





            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/Margin50dp"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"

                    android:layout_margin="5sp"
                    app:contentPadding="10sp"
                    app:rippleColor="@color/colorPrimary"
                    app:cardElevation="5sp">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="5"

                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="2"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="@dimen/Margin50dp"
                                    android:gravity="center"
                                    android:layout_gravity="center|start"
                                    android:background="@drawable/red_circle"
                                    android:layout_height="@dimen/Margin50dp">
                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="@dimen/margin25dp"
                                        android:rotation="180"
                                        android:backgroundTint="@color/white"
                                        android:background="@drawable/ic_bookmark_black_24dp"
                                        android:layout_height="@dimen/margin25dp"/>
                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1.2"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/orderNumber"
                                    android:text="Jan 1 2020"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"



                                    app:fontFamily="@font/montserrat"
                                    android:textSize="@dimen/ten"
                                    android:textColor="@color/black"
                                    android:alpha=".7"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="SpUsage" />
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/tvCustomerName"
                                    android:text="Jan 1 2020"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"



                                    app:fontFamily="@font/montserrat_b"
                                    android:textSize="@dimen/text_size_edit"
                                    android:textColor="@color/black"

                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="SpUsage" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/orderDate"
                                    android:text="Today's Count"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"
                                    app:fontFamily="@font/montserrat"
                                    android:textSize="@dimen/ten"
                                    android:textColor="@color/black"
                                    android:alpha=".7"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="SpUsage" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="1.8"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="match_parent"

                                    android:id="@+id/tvPrice"
                                    android:text="0"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"



                                    app:fontFamily="@font/montserrat_b"
                                    android:textSize="@dimen/Margin15dp"
                                    android:textColor="@color/green"

                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_height="wrap_content"
                                    tools:ignore="SpUsage" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/Margin5dp"
                            android:text="Delivery Address"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"


                            android:padding="@dimen/Margin5dp"
                            app:fontFamily="@font/montserrat_b"
                            android:textSize="@dimen/text_size_edit"
                            android:textColor="@color/black"

                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            tools:ignore="SpUsage" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:drawableStart="@drawable/ic_baseline_location_on_24"
                            android:text="Delivery Address"
                            android:layout_gravity="center|start"
                            android:gravity="center|start"


                            android:padding="@dimen/Margin5dp"
                            app:fontFamily="@font/montserrat"
                            android:textSize="@dimen/ten"
                            android:textColor="@color/black"
                            android:id="@+id/deliveryAddress"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_height="wrap_content"
                            tools:ignore="SpUsage" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Product Details"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:padding="@dimen/Margin5dp"
                    app:fontFamily="@font/montserrat_b"
                    android:textSize="@dimen/text_size_edit"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/litemItemCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:itemCount="2"
                    tools:listitem="@layout/order_item_product_view"
                    android:orientation="vertical"
                    app:reverseLayout="true"

                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                    android:divider="@null"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Order Log"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:padding="@dimen/Margin5dp"
                    app:fontFamily="@font/montserrat_b"
                    android:textSize="@dimen/text_size_edit"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orderLogList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:itemCount="2"
                    tools:listitem="@layout/instraction_log_item"
                    android:orientation="vertical"
                    app:reverseLayout="true"

                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                    android:divider="@null"
                    />



                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Instructions"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"


                    android:padding="@dimen/Margin5dp"
                    app:fontFamily="@font/montserrat_b"
                    android:textSize="@dimen/text_size_edit"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/instructionList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    tools:itemCount="2"
                    tools:listitem="@layout/instruction_item"
                    android:orientation="vertical"
                    app:reverseLayout="true"

                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"

                    android:divider="@null"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:weightSum="2"
    android:id="@+id/btnLayout"

    android:layout_gravity="bottom|end"
    android:gravity="end|bottom"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/acceptOrder"
            android:elevation="5dp"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:padding="@dimen/Margin15dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/green_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/rejectLayout"

        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rejectMap"
            android:elevation="5dp"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:padding="@dimen/Margin15dp"
            android:layout_gravity="center"
            android:gravity="center"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/red_gredient_rect_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.coordinatorlayout.widget.CoordinatorLayout>