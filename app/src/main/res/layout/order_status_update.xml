<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"


    android:background="@color/white"
    android:padding="@dimen/Margin10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"

            android:text="Selected Product"
            android:layout_gravity="center|start"
            android:gravity="center|start"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginTop="@dimen/Margin5dp"

            android:layout_marginBottom="@dimen/Margin5dp"
            app:fontFamily="@font/montserrat_b"
            android:textSize="@dimen/text_size_edit"
            android:layout_weight="2"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="SpUsage" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:id="@+id/tvPT"
            android:text=" "
            android:layout_weight="3"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginTop="@dimen/Margin5dp"

            android:layout_marginBottom="@dimen/Margin5dp"
            app:fontFamily="@font/montserrat_b"
            android:textSize="@dimen/text_size_edit"
            android:textColor="@color/black"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            tools:ignore="SpUsage" />

    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="2sp"/>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:fontFamily="@font/montserrat_b"
                android:layout_margin="@dimen/Margin5dp"
                android:textAllCaps="false"
                 android:textColor="@color/white"

                android:textSize="@dimen/text_size_edit"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:fontFamily="@font/montserrat_b"
                android:layout_margin="@dimen/Margin5dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/green"
                 android:textColor="@color/white"

                android:textSize="@dimen/text_size_edit"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>