<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_marginEnd="@dimen/Margin10dp"

                    android:alpha=".7"
                    android:gravity="center|start"
                    android:padding="@dimen/Margin5dp"
                    android:text="Product Tittle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Margin15dp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/ten"

                    android:layout_marginEnd="@dimen/ten"
                    android:background="@drawable/gray_stroke_gray"
                    android:hint=""
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_marginEnd="@dimen/Margin10dp"

                    android:alpha=".7"
                    android:gravity="center|start"
                    android:padding="@dimen/Margin5dp"
                    android:text="Discription"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Margin15dp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDes"
                    android:layout_width="match_parent"
                    android:layout_height="120sp"

                    android:layout_gravity="top"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    android:background="@drawable/gray_stroke_gray"
                    android:gravity="top"
                    android:hint=""
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_marginEnd="@dimen/Margin10dp"

                    android:alpha=".7"
                    android:gravity="center|start"
                    android:padding="@dimen/Margin5dp"
                    android:text="Product stock quantity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Margin15dp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/ten"

                    android:layout_marginEnd="@dimen/ten"
                    android:background="@drawable/gray_stroke_gray"
                    android:hint=""
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="@dimen/Margin10dp"

                    android:layout_marginEnd="@dimen/Margin10dp"

                    android:alpha=".7"
                    android:gravity="center|start"
                    android:padding="@dimen/Margin5dp"
                    android:text="Product Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Margin15dp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/ten"

                    android:layout_marginEnd="@dimen/ten"
                    android:background="@drawable/gray_stroke_gray"
                    android:hint=""
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|bottom"

            android:gravity="bottom|end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Margin5dp"
                android:background="@drawable/btn_bg"

                android:fontFamily="@font/montserrat_b"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:textSize="@dimen/text_size_edit" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>