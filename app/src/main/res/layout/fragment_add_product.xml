<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />

    </data>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"

                android:text="Product Tittle"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:layout_marginEnd="@dimen/Margin10dp"

                android:layout_marginStart="@dimen/Margin10dp"
                app:fontFamily="@font/montserrat"
                android:textSize="@dimen/Margin15dp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"

                android:textSize="@dimen/text_size_edit"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/gray_stroke_gray"
                android:hint=""
                android:padding="16dp"

                app:layout_constraintTop_toBottomOf="@id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"

                android:text="Discription"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:layout_marginEnd="@dimen/Margin10dp"

                android:layout_marginStart="@dimen/Margin10dp"
                app:fontFamily="@font/montserrat"
                android:textSize="@dimen/Margin15dp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDes"
                android:layout_width="match_parent"
                android:layout_height="120sp"

                android:inputType="text"
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="@dimen/text_size_edit"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/gray_stroke_gray"
                android:hint=""
                android:padding="16dp"

                app:layout_constraintTop_toBottomOf="@id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"

                android:text="Product stock quantity"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:layout_marginEnd="@dimen/Margin10dp"

                android:layout_marginStart="@dimen/Margin10dp"
                app:fontFamily="@font/montserrat"
                android:textSize="@dimen/Margin15dp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"

                android:textSize="@dimen/text_size_edit"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/gray_stroke_gray"
                android:hint=""
                android:padding="16dp"

                app:layout_constraintTop_toBottomOf="@id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"

                android:text="Product Price"
                android:layout_gravity="center|start"
                android:gravity="center|start"

                android:layout_marginEnd="@dimen/Margin10dp"

                android:layout_marginStart="@dimen/Margin10dp"
                app:fontFamily="@font/montserrat"
                android:textSize="@dimen/Margin15dp"
                android:padding="@dimen/Margin5dp"
                android:textColor="@color/black"
                android:alpha=".7"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                tools:ignore="SpUsage" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="text"

                android:textSize="@dimen/text_size_edit"
                android:layout_marginStart="@dimen/ten"
                android:layout_marginEnd="@dimen/ten"
                android:background="@drawable/gray_stroke_gray"
                android:hint=""
                android:padding="16dp"

                app:layout_constraintTop_toBottomOf="@id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="end|bottom"
        android:gravity="bottom|end"

        android:layout_height="match_parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit_btn"
            android:layout_margin="@dimen/Margin5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"

            android:fontFamily="@font/montserrat_b"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"

            android:textSize="@dimen/text_size_edit"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>