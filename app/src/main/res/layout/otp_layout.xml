<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center|end|bottom"

android:padding="@dimen/tittle_text_size"
    android:background="@drawable/red_gredient_bg"

    tools:context=".LaunchActivity">


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:id="@+id/otp_verify"
        android:text="@string/otp_verify"
        android:layout_gravity="center|start"
        android:gravity="center|start"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"

        android:layout_marginTop="10dp"
        app:fontFamily="@font/montserrat_b"
        android:textSize="@dimen/tittle_text_size"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        tools:ignore="SpUsage" />
    <com.google.android.material.textview.MaterialTextView

        android:layout_width="match_parent"
        android:text="@string/otp_message"
        android:layout_gravity="center"
        android:gravity="center|start"
        android:id="@+id/message"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"

        android:layout_marginTop="5dp"
        app:fontFamily="@font/montserrat_b"
        android:textSize="@dimen/ten"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otp_verify"
        tools:ignore="SpUsage" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_email_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit phone no or email id"
        app:fontFamily="@font/montserrat"
        android:gravity="center"
        android:padding="13dp"
        android:background="@drawable/form_edit_text_background_white"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginTop="@dimen/tittle_text_size"
        android:textSize="@dimen/twelve"
        android:textColor="@color/g_color"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>






    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edit_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="text"

        android:textSize="@dimen/text_size_edit"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="110dp"
        android:layout_marginTop="@dimen/tittle_text_size"

android:textColorHint="@color/white"
        android:background="@drawable/form_light_red"
        android:hint="OTP"
        android:padding="16dp"


        app:layout_constraintTop_toBottomOf="@id/edit_email_id"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpUsage"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="@dimen/ten" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:layout_marginRight="@dimen/ten"

        android:textAllCaps="false"
        app:backgroundTint="@color/white"

        android:background="@drawable/form_edit_text_background_white"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_edit"
        app:layout_constraintTop_toTopOf="@id/edit_otp"
        app:layout_constraintBottom_toBottomOf="@id/edit_otp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:text="Send ..."
        android:layout_gravity="center"
        android:gravity="center|start"
        android:id="@+id/timer"
        android:layout_marginTop="5dp"
        app:fontFamily="@font/montserrat_i"
        android:textSize="@dimen/ten"
        android:textColor="@color/white"

        android:layout_marginEnd="@dimen/tittle_text_size"
        android:layout_marginStart="@dimen/tittle_text_size"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_otp"
        tools:ignore="SpUsage" />



</androidx.constraintlayout.widget.ConstraintLayout>