<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
 >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="5"
        android:padding="@dimen/Margin10dp"
        android:layout_margin="@dimen/Margin5dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTn"
                android:layout_width="wrap_content"
                android:text="MK"

                android:textSize="15sp"
                android:padding="@dimen/Margin10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_b"
                android:background="@drawable/red_square_gradient"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/Margin5dp"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:text="Name"
                android:textSize="@dimen/text_size_edit"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_b"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMobile"
                android:layout_width="match_parent"
                android:text="+91"

                android:textSize="@dimen/text_size_edit"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_b"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sideMenuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:listitem="@layout/menuviewlayout"
        android:orientation="vertical"
        android:layout_margin="@dimen/Margin10dp"
        app:reverseLayout="true"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:divider="@null"
        />

    <ScrollView
    android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="My Account"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"

            android:padding="@dimen/Margin10dp"
            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Add Product"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Manage Order"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Payment"
            android:textSize="@dimen/Margin15dp"
            android:background="@drawable/bottom_border"
            android:textColor="@color/black"
            android:padding="@dimen/Margin10dp"

            android:layout_marginStart="@dimen/Margin10dp"
            android:layout_marginEnd="@dimen/Margin10dp"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="end|bottom"
        android:gravity="end|bottom"
        android:layout_height="match_parent">
        <com.google.android.material.button.MaterialButton

            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"

            android:layout_gravity="end|bottom"




             android:textAllCaps="false"
            android:layout_marginBottom="@dimen/Margin5dp"
            android:layout_marginEnd="@dimen/Margin15dp"
            android:backgroundTint="@color/black"
            android:layout_marginStart="@dimen/Margin15dp"
            android:background="@drawable/black_gredient_bg"
             android:textColor="@color/white"
            android:textSize="@dimen/margin25dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>