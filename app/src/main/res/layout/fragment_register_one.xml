<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"



    android:background="@color/white"
    android:padding="@dimen/Margin10dp"
    >

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"

           android:gravity="center"
           android:layout_height="match_parent">
           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/login"
               android:fontFamily="@font/montserrat_b_i"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Register \nas Vendor"
               android:layout_marginBottom="@dimen/Margin15dp"
               app:fontFamily="@font/montserrat"
               android:gravity="center|start"

               android:layout_marginTop="@dimen/tittle_text_size"

               android:textSize="@dimen/tittle_text_size"

               android:textColor="@color/colorPrimary"

               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"/>


           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Mobile No"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/mobile"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="number"
android:maxLength="10"
                   android:textSize="@dimen/text_size_edit"
                   android:hint="+91"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Enter Your Name"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edit_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Your Name"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Enter Your Email"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edit_email"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Your Email"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:id="@+id/optlayout"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:visibility="gone"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Enter Your OTP"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/enterOtp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Enter Your OTP"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>

           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:weightSum="2"
               android:layout_height="wrap_content">
               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/ecommerce"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Ecommerce"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_b"
                   android:layout_margin="@dimen/Margin5dp"
                   android:padding="@dimen/Margin15dp"
                   android:background="@drawable/red_gredient_bg"
                   android:textColor="@color/white"

                   android:textSize="@dimen/text_size_edit"/>
               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/service"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Service"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:fontFamily="@font/montserrat_b"
                   android:layout_margin="@dimen/Margin5dp"
                   android:padding="@dimen/Margin15dp"

                   android:background="@drawable/white_gredient_bg"
                   android:textColor="@color/black"

                   android:textSize="@dimen/text_size_edit"/>


           </androidx.appcompat.widget.LinearLayoutCompat>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"

               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Select Category"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"

                   android:layout_height="wrap_content"/>


               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvCategory"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:fontFamily="@font/montserrat_b_i"

                   android:hint="Select Category"
                   android:inputType="text"
                   android:padding="16dp"
                   android:textSize="@dimen/text_size_edit" />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Select City"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textview.MaterialTextView
                   android:id="@+id/tvCity"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Select City"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
          <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Enter Your Password"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edit_pass"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Enter Your Password"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:background="@drawable/form_edit_text_background"
               android:padding="@dimen/Margin5dp"
               android:layout_marginBottom="@dimen/Margin10dp"
               android:layout_height="wrap_content">

               <com.google.android.material.textview.MaterialTextView
                   android:layout_width="match_parent"
                   android:text="Enter Your Confirm Password"
                   android:padding="@dimen/Margin5dp"
                   android:textSize="@dimen/text_size_edit"
                   android:layout_height="wrap_content"/>



               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/edit_confirm_pass"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/form_edit_text_background"

                   android:inputType="text"

                   android:textSize="@dimen/text_size_edit"
                   android:hint="Enter Your Confirm Password"
                   android:fontFamily="@font/montserrat_b_i"
                   android:padding="16dp"
                   />

           </LinearLayout>
           <com.google.android.material.button.MaterialButton
               android:id="@+id/submit_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Register"
               android:fontFamily="@font/montserrat_b"
               android:layout_margin="@dimen/Margin5dp"
               android:textAllCaps="false"
               android:background="@drawable/btn_bg"
               android:textColor="@color/white"

               android:textSize="@dimen/text_size_edit"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/registerBtn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Login"
               android:padding="@dimen/Margin15dp"
               android:layout_gravity="center"
               android:gravity="center"

               android:textAllCaps="false"
               android:layout_margin="@dimen/Margin5dp"
               android:elevation="@dimen/Margin5dp"

               android:background="@drawable/white_stroke_gray"
               android:textColor="@color/black"
               android:fontFamily="@font/montserrat_b"
               android:textSize="@dimen/text_size_edit"/>






       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</LinearLayout>