<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"


    android:orientation="vertical"
    android:padding="@dimen/Margin10dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tittle_text_size"
                android:layout_marginBottom="@dimen/Margin15dp"
                android:fontFamily="@font/montserrat_b_i"
                android:gravity="center|start"
                android:text="Register \nas Vendor"

                android:textColor="@color/colorPrimary"

                android:textSize="@dimen/tittle_text_size"

                app:fontFamily="@font/montserrat"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Mobile No"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"
                    android:hint="+91"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Your Name"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Your Name"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Your Email"
                    android:textSize="@dimen/text_size_edit" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Your Email"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Photo"
                    android:textSize="@dimen/text_size_edit" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/photo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/Margin10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_add_photo_alternate_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Shop/service Name"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Shop/service Name"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/optlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Your OTP"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterOtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Enter Your OTP"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ecommerce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_gredient_bg"
                    android:fontFamily="@font/montserrat_b"
                    android:padding="@dimen/Margin15dp"
                    android:text="Ecommerce"
                    android:textColor="@color/white"

                    android:textSize="@dimen/text_size_edit" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/Margin5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_gredient_bg"
                    android:fontFamily="@font/montserrat_b"
                    android:padding="@dimen/Margin15dp"

                    android:text="Service"
                    android:textColor="@color/black"

                    android:textSize="@dimen/text_size_edit" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"

                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Select Category"

                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Select Category"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Select City"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/form_edit_text_background"

                    android:fontFamily="@font/montserrat_b_i"

                    android:hint="Select City"
                    android:inputType="text"
                    android:padding="16dp"
                    android:textSize="@dimen/text_size_edit" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Your Password"
                    android:textSize="@dimen/text_size_edit" />

                <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_edit_text_background"
                        android:fontFamily="@font/montserrat_b_i"
                        android:hint="Enter Your Password"
                        android:inputType="textPassword"
                        android:padding="16dp"
                        android:textSize="@dimen/text_size_edit" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/Margin10dp"
                android:background="@drawable/form_edit_text_background"
                android:orientation="vertical"
                android:padding="@dimen/Margin5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/Margin5dp"
                    android:text="Enter Your Confirm Password"
                    android:textSize="@dimen/text_size_edit" />


                <com.google.android.material.textfield.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_confirm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/form_edit_text_background"
                        android:fontFamily="@font/montserrat_b_i"
                        android:hint="Enter Your Confirm Password"
                        android:inputType="textPassword"
                        android:padding="16dp"
                        android:textSize="@dimen/text_size_edit" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/Margin5dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/montserrat_b"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"

                android:textSize="@dimen/text_size_edit" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/Margin5dp"
                android:background="@drawable/white_stroke_gray"
                android:elevation="@dimen/Margin5dp"

                android:fontFamily="@font/montserrat_b"
                android:gravity="center"
                android:padding="@dimen/Margin15dp"

                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_edit" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>