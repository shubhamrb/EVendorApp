<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Home.PaymentRequest">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetStart="0dp"
            app:titleTextColor="@color/white"

            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp"
            app:popupTheme="@style/Platform.MaterialComponents" >





        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"

        android:layout_height="wrap_content"


        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10sp"

        android:layout_margin="5sp"
        app:contentPadding="10sp"
        app:rippleColor="@color/colorPrimary"
        app:cardElevation="5sp">



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"

            android:layout_height="wrap_content">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="@dimen/Margin50dp"
                    android:gravity="center"
                    android:layout_gravity="center|start"

                    android:layout_height="@dimen/Margin50dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/Margin45dp"


                        android:background="@drawable/totalcollection"
                        android:layout_height="@dimen/Margin45dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDatefour"
                    android:layout_width="match_parent"

                    android:text=" "
                    android:layout_gravity="center|start"
                    android:gravity="center|start"



                    app:fontFamily="@font/montserrat"
                    android:textSize="@dimen/ten"
                    android:textColor="@color/black"
                    android:alpha=".7"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Total Amount"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"



                    app:fontFamily="@font/montserrat_b"
                    android:textSize="@dimen/text_size_edit"
                    android:textColor="@color/black"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"

                    android:text="Today's Payment"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"



                    app:fontFamily="@font/montserrat"
                    android:textSize="@dimen/ten"
                    android:textColor="@color/black"
                    android:alpha=".7"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/totalCollection"
                    android:layout_width="match_parent"

                    android:text="23"
                    android:layout_gravity="center|start"
                    android:gravity="center"



                    app:fontFamily="@font/montserrat_b"
                    android:textSize="@dimen/textsize18sp"
                    android:textColor="@color/colorPrimary"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpUsage" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_marginTop="@dimen/Margin10dp"
        android:layout_margin="@dimen/Margin5dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Credit"
                android:id="@+id/tvCredit"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/red_square_gradient"
                android:padding="@dimen/Margin5dp"
                android:fontFamily="@font/montserrat_b"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Debit"
                android:id="@+id/tvDebit"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/Margin5dp"
                android:fontFamily="@font/montserrat_b"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Request List"
                android:id="@+id/requestList"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/Margin5dp"
                android:fontFamily="@font/montserrat_b"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="Payment Request"
        android:id="@+id/tvPayRequest"
        android:layout_gravity="center|end"
        android:gravity="center|end"
        android:textColor="@color/white"
 android:visibility="gone"
        android:background="@drawable/red_gredient_rect_bg"
        android:padding="@dimen/Margin10dp"
        android:layout_margin="@dimen/Margin5dp"
        android:fontFamily="@font/montserrat_b"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listItem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/Margin5dp"

        android:orientation="vertical"
        app:reverseLayout="true"
        tools:itemCount="1"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:divider="@null"
        />

</androidx.appcompat.widget.LinearLayoutCompat>