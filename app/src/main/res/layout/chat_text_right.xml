<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/Margin5dp"
    android:layout_marginBottom="@dimen/Margin5dp"
    android:layout_marginStart="@dimen/Margin5dp"
    android:layout_marginEnd="@dimen/Margin15dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:background="@drawable/red_chat"
        android:padding="@dimen/Margin5dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:padding="@dimen/Margin5dp"
            android:textSize="@dimen/Margin15dp"
            android:textColor="@color/white"
            android:layout_gravity="start"
            android:gravity="start"
            android:id="@+id/textViewMessage"
            android:text="Hello Bhupesh Kesh Ho bro"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:text="18:00"
        android:gravity="end"
        android:id="@+id/textViewTime"
        android:layout_gravity="start"
        android:padding="@dimen/Margin5dp"
        android:drawablePadding="5sp"
        android:drawableEnd="@drawable/ic_person_pin_black_24dp"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>