<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cardView"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0sp"

    android:layout_margin="0sp"
    app:contentPadding="0sp"
    app:rippleColor="@color/colorPrimary"
    app:cardElevation="5sp">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50sp"
            android:id="@+id/closeId"
            android:background="@drawable/ic_close_black_24dp"
            android:layout_height="50sp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/Margin5dp"
        android:background="@drawable/form_edit_text_background"
        android:padding="@dimen/Margin5dp"

        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Select Category"
            android:padding="@dimen/Margin5dp"
            android:textSize="@dimen/text_size_edit"
            android:layout_height="wrap_content"/>



        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edit_text_background"

            android:inputType="text"

            android:textSize="@dimen/text_size_edit"
            android:hint="Select Category"
            android:fontFamily="@font/montserrat_b_i"
            android:padding="16dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/Margin5dp"
        android:background="@drawable/form_edit_text_background"
        android:padding="@dimen/Margin5dp"

        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:text="Select City"
            android:padding="@dimen/Margin5dp"
            android:textSize="@dimen/text_size_edit"
            android:layout_height="wrap_content"/>



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edit_text_background"

            android:inputType="text"

            android:textSize="@dimen/text_size_edit"
            android:hint="Eneter Service Name"
            android:fontFamily="@font/montserrat_b_i"
            android:padding="16dp"
            />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:fontFamily="@font/montserrat_b"
        android:layout_margin="@dimen/Margin5dp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"

        android:textSize="@dimen/text_size_edit"/>

</androidx.appcompat.widget.LinearLayoutCompat>
 </com.google.android.material.card.MaterialCardView>
